@model IEnumerable<MyShop.Core.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>



@foreach (var item in Model){
    <div class="col-md4" style="height:450px;padding:10px;border: solid thin whitesmoke">
        <div class="col-md-12">
            <img class="img-thumbnail" style="height:50px" src="~/Content/ProductImages/@item.Image" alt="No Image" />
        </div>
        <div class="col-md-12">
            <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
        </div>
        <div class="col-md-12">
            <p>@item.Description</p>
        </div>
        <div class="col-md-12">
            <h4>@item.Price</h4>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-default">Add to Basket</a>
        </div>
    </div>
}
<div class="col-md-12 clearfix"/>
